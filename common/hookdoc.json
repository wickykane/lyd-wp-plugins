{
    "opts": {
        "destination": "docs/hooks",
        "template": "../node_modules/wp-hookdoc/template",
        "recurse": true
    },
    "source": {
        "includePattern": ".+\\.(php|inc)?$"
    },
    "plugins": ["wp-hookdoc/plugin"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "outputSourcePath": true
        }
    }
}
